<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cs52_Razor_03</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-danger">
        <a class="navbar-brand" href="#">My menu</a>
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#my-nav-bar"
                aria-controls="my-nav-bar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="my-nav-bar">
            <!--HTML các thành phần trình bày trên Navbar-->
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-page="Index">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="Privacy">Học HTML</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="Post1">Post 1</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="Post2">Post 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Product" asp-page="/Post4">Post 4</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="bg-secondary">Header</div>

    <div class="bg-info pb-4">
        @RenderBody()
    </div>

    <div class="bg-success">
        Footer
        @await RenderSectionAsync("aloalo", required: false) 
        @* Required: các trang có thể thiết lập "NoidungFooter" 
            hoặc là không*@
        @await RenderSectionAsync("NoidungFooter", required: false)
        @await RenderSectionAsync("Post4_section",required:false) 
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
