@page "/Trang-dau-tien/{solanlap:int?}"
@model cs50_Razor_01.Pages.FirstPageModel
@{
// chuỗi rỗng thì nó lấy trang này trả về cho client luôn
//Layout = "";
// Tìm page _MyLayout

}
<a asp-page="SecondPage">trang thu hai </a>
<h1 style="color:green">@Model.title</h1>
<h1 style="color:red">Đây là trang razor Page đầu tiên của tôi</h1>
<p>Hoc lap trinh asp.net core <strong>@DateTime.Now</strong></p>
@{
    var a = 2;
    var b = 3;

    var solanlap_string = this.Request.RouteValues["solanlap"] ?? "0";
    var solanlap = int.Parse(solanlap_string.ToString());

    <p>Can bac 2 cua a: @Math.Sqrt(a)</p>

}
<h1 style="color:blueviolet">@Model.Welcome("Bảo")</h1>
<p>@ViewData["mydata"]</p>
<p> @Model.x</p>
<p>Tong cua @a va @b là @(a+b)  </p>
<p> SO LAN LAP @solanlap </p>
<ol>
    @for (int i = 0; i < (int)solanlap; i++)
    {
        <li>Muc thu @i </li>
    }

</ol>